    if(SemGrade>=96 && SemGrade<=101)
    {
        TransumatedGrade = "1.00";
    }

    else if (SemGrade >= 94 && SemGrade <= 95)
    {
        TransumatedGrade = "1.25";
    }

    else if (SemGrade >= 92 && SemGrade <= 93)
    {
        TransumatedGrade = "1.50";
    }
    
    else if (SemGrade >= 89 && SemGrade <= 91)
    {
        TransumatedGrade = "1.75";
    }

    else if (SemGrade >= 87 && SemGrade <= 88)
    {
        TransumatedGrade = "2.00";
    }

    else if (SemGrade >= 84 && SemGrade <= 86)
    {
        TransumatedGrade = "2.25";
    }

    else if (SemGrade >= 82 && SemGrade <= 83)
    {
        TransumatedGrade = "2.50";
    }

    else if (SemGrade >= 79 && SemGrade <= 81)
    {
        TransumatedGrade = "2.75";
    }

    else if (SemGrade >= 75 && SemGrade <= 78)
    {
        TransumatedGrade = "3.00";
    }

    else if (SemGrade <75)
    {
        TransumatedGrade = "5.00";
    }

    <p>Name: @Firstname @Lastname</p>
    <p>Prelim: @PrelimGrade</p>
    <p>Final: @FinalGrade</p>
    <p>Semestral Grade: @SemGrade</p>
    <p>Transmuted Grade: @TransumatedGrade</p>
