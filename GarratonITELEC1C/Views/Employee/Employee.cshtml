    int salaryPerDay = SalaryPerHour * 8;
    int salaryPerMonth = salaryPerDay * 30;
    var Email = "edmundlecter.garraton.cics@ust.edu.ph";
    int PrelimGrade = 87;
    int FinalGrade = 87;
    int SemGrade = (PrelimGrade + FinalGrade) / 2;
    var TransumatedGrade = "";



    <h1>Scenario 1</h1>

    DateTime birthDate =
    Convert.ToDateTime(Birthday);
    DateTime todayDate = DateTime.Today;
