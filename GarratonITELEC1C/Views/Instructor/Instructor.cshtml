@{


    <h1>Instructor List</h1>

    <table class="table">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>IsTenured</th>
            <th>Rank</th>
            <th>HiringDate</th>
            <th>Details</th>
            <th>Edit</th>
        </tr>

        @foreach (var Instructor in Model)
        {
            <tr>
                <td>@Instructor.Id</td>
                <td>@Instructor.FirstName @Instructor.LastName</td>
                <td>@(Instructor.IsTenured ? "Permanent" : "Probationary")</td>
                <td>@Instructor.Rank</td>
                <td>@Instructor.HiringDate</td>
                <td><a asp-action="ShowDetails" asp-route-id="@Instructor.Id">Show Details</a></td>
                <td><a asp-action="Edit" asp-route-id="@Instructor.Id">Edit</a></td>
            </tr>
        }
    </table>

    <a class="btn btn-primary" asp-action="AddInstructor">Add Instructor</a>

}
